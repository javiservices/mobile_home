{% extends 'base.html.twig' %}

{% block title %}Reservar!{% endblock %}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" rel="stylesheet"/>
    <link rel="stylesheet" href="{{asset('css/datepicker.css')}}">
{% endblock %}
{% block body %}

<div class="container w-100 p-3">
    <form action="{{ path('reservar') }}" method="POST" >
        <h1>Reservar </h1>
        <div class="row">
            <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="startDate">Desde</span>
                        <input type="text" class="startDatepicker form-control" name="boking[startDate]" aria-describedby="startDate" autocomplete="off">
                        <span class="input-group-text" id="endDate">Hasta</span>
                        <input type="text" class="endDatepicker form-control" name="boking[endDate]" aria-describedby="endDate" autocomplete="off">
                    </div>
                </div>
            <div class="col-md-1"></div>
        </div>

        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <input type="submit" value="Reservar" class="btn btn-info col-md-12">
            </div>
            <div class="col-md-4"></div>
        </div>
    </form> 
</div>
<script>
    var dateArr = JSON.parse('{{ fechasPilladas | json_encode | raw }}');
</script>
<script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.es.min.js"></script>
<script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
<script src="{{ asset('js/calendar-script.js') }}"></script>
<script src="{{ asset('js/datepicker-reservas.js') }}"></script>
{% endblock %}
