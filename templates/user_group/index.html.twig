{% extends 'admin.html.twig' %}

{% block title %}Gestion de grupos!{% endblock %}

{% block body %}
    <p><a href="{{ path('admon_grupos_add') }}" class="btn btn-primary">Nuevo grupo</a></p>
    <table class="table table-striped table-hover table-primary">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Color</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for item in lst %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{item.name}}</td>
                 <td>{{item.color}}</td>
                <td>
                    <a href="{{ path('admon_grupos_edit', {id: item.id}) }}"><i class="bi bi-pencil-fill"></i></a>&nbsp;&nbsp;
                    <a href="{{ path('admon_grupos_del', {id: item.id}) }}"><i class="bi bi-trash"></i></a>
                </td>
                </tr> 
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
