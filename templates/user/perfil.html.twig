{% extends 'base.html.twig' %}

{% block title %}Editar Perfil{% endblock %}

{% block body %}
    <h1 class="display-4 fst-italic text-center">Editar Perfil</h1>
    {{form_start(frmUser)}}
     <div class="row">
            <div class="col-4">
              {{ form_row(frmUser.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-8">
              {{ form_row(frmUser.surnames, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col-md-12 mb-3">
              {{ form_row(frmUser.email, {'attr': {'class': 'form-control','required': 'off'}}) }}
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              {{ form_row(frmUser.password.first, {'attr': {'class': 'form-control', 'required': 'off'}}) }}
            </div>
            <div class="col-6">
              {{ form_row(frmUser.password.second, {'attr': {'class': 'form-control', 'required': 'off'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-btn fa-user"></i> Grabar
              </button>
            </div>
          </div>
    {{ form_end(frmUser) }}
{% endblock %}
